{
  "name": "eslint-rule-suppressor",
  "version": "1.0.0",
  "description": "Automagic eslint rule suppressor",
  "main": "dist/index.js",
  "bin": {
    "eslint-rule-suppressor": "dist/index.js"
  },
  "scripts": {
    "build-and-run": "npm run build && npm run deploy && npm run invoke",
    "build": "npm run compile && npm run test",
    "compile": "npm run clean && tsc --project tsconfig.app.json",
    "clean": "rimraf ./dist",
    "test": "jest --passWithNoTests",
    "lint": "eslint . --ext .ts",
    "deploy": "npm uninstall -g && npm install -g",
    "invoke": "eslint-rule-suppressor --src ./test-files"
  },
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@types/command-line-args": "^5.2.0",
    "@types/command-line-usage": "^5.0.2",
    "@types/eslint": "^8.4.5",
    "@types/jest": "^28.1.7",
    "@types/jscodeshift": "^0.11.5",
    "@types/node": "^18.7.6",
    "@typescript-eslint/eslint-plugin": "^5.33.1",
    "@typescript-eslint/parser": "^5.33.1",
    "eslint": "^8.22.0",
    "jest": "^28.1.3",
    "rimraf": "^3.0.2",
    "ts-jest": "^28.0.8",
    "typescript": "^4.7.4"
  },
  "dependencies": {
    "command-line-args": "^5.2.1",
    "command-line-usage": "^6.1.3",
    "jscodeshift": "^0.13.1"
  }
}
